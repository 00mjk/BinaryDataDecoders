<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">


	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Copyright>Matthew Whited 2020</Copyright>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<RepositoryUrl>https://github.com/mwwhited/BinaryDataDecoders/</RepositoryUrl>
		<RepositoryType>GitHub</RepositoryType>
		<Authors>Matthew Whited</Authors>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
	  <NoWarn>1701;1702;CS1591;CS3021</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Parser\ExpressionTree.g4" />
	</ItemGroup>

	<ItemGroup>
		<Antlr4 Include="Parser\ExpressionTree.g4">
			<Listener>false</Listener>
		</Antlr4>
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE" Link="LICENSE">
			<PackagePath />
			<Pack>True</Pack>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Antlr4.Runtime.Standard" Version="4.8.0" />
		<PackageReference Include="Antlr4BuildTasks" Version="8.4.0" />
	</ItemGroup>

</Project>
